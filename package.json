{
  "name": "quno-challenge-backend",
  "version": "1.0.0",
  "description": "Quno challenge for Backend",
  "author": "Qunomedical",
  "license": "MIT",
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "build": "tsc --build --verbose",
    "clean": "rm -rf ./dist",
    "dev": "yarn build && serverless offline start --httpPort 4000 --noPrependStageInUrl --noAuth",
    "start": "yarn dev",
    "db:migration": "db-migrate --sql-file --config ./db/config.json --migrations-dir ./db/migrations",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.64",
    "@types/bluebird": "^3.5.33",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@types/reflect-metadata": "^0.1.0",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "aws-lambda": "^1.0.6",
    "db-migrate": "^0.11.11",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^7.12.1",
    "jest": "^26.6.3",
    "serverless": "^2.9.0",
    "serverless-offline": "^6.8.0",
    "serverless-openapi-documentation": "^0.4.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@middy/core": "^1.4.0",
    "@middy/http-error-handler": "^1.4.0",
    "@middy/http-json-body-parser": "^1.4.0",
    "@middy/http-response-serializer": "^1.4.0",
    "@middy/validator": "^1.4.0",
    "class-validator": "^0.12.2",
    "http-status": "^1.4.2",
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13",
    "ts-postgres": "^1.1.3"
  }
}
